{
  "name": "NodeBackendServiceTemplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:KDKHD/NodeBackendServiceTemplate.git",
  "author": "kdkhd <kdkhdyt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --config nodemon.json --exec 'ts-node -r tsconfig-paths/register src/app.ts'",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/app.ts",
    "start": "tsc && ts-node -r tsconfig-paths/register dist/app.js",
    "build": "tsc -p .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate:up": "db-migrate up --migrations-dir db/migrations --config db/config.json",
    "migrate:down": "db-migrate down --migrations-dir db/migrations --config db/config.json",
    "migrate:create": "db-migrate create $npm_config_name --sql-file --migrations-dir db/migrations --config db/config.json"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/pg": "^8.6.4",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "pg": "^8.7.1",
    "tsconfig-paths": "^3.12.0",
    "winston": "^3.4.0"
  }
}
